{
  "name": "autoware:universe-devel-cuda",
  "build": {
    "context": "../..",
    "dockerfile": "../Dockerfile",
    "args": {
      "BASE_IMAGE": "ghcr.io/autowarefoundation/autoware:universe-devel-cuda"
    },
    "options": ["--network=host"]
  },
  "remoteUser": "autoware",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  "workspaceFolder": "/workspace",
  "hostRequirements": {
    "gpu": true
  },
  "runArgs": [
    "-it",
    "--rm",
    "--name=${localWorkspaceFolderBasename}",
    "--privileged",
    "--env",
    "DISPLAY=${env:DISPLAY}",
    "--env",
    "XAUTHORITY=${env:XAUTHORITY}",
    "--env",
    "NVIDIA_DRIVER_CAPABILITIES=all",
    "--net=host",
    "--pid=host",
    "--volume=/tmp/.X11-unix/:/tmp/.X11-unix",
    "--volume=/etc/localtime:/etc/localtime:ro",
    "--volume=/dev/dri:/dev/dri:ro",
    "--volume=${env:HOME}/autoware_data:/home/autoware/autoware_data",
    "--volume=${env:HOME}/autoware_map:/home/autoware/autoware_map",
    "--volume=${env:HOME}/.ssh:/home/autoware/.ssh",
    "--volume=${env:HOME}/.webauto:/home/autoware/.webauto",
    "--volume=${env:HOME}/.config/Lichtblick:/home/autoware/.config/Lichtblick",
    "--volume=${env:HOME}/.ccache:/ccache",
    "--gpus",
    "all",
    // Additional configs
    "--volume=/opt/autoware:/opt/autoware",
    "--volume=${env:HOME}/.tmux:/home/autoware/.tmux",
    "--volume=${env:HOME}/.tmux.conf:/home/autoware/.tmux.conf",
    "--volume=${env:HOME}/.bashrc.d:/home/autoware/.bashrc.d",
    "--volume=${env:HOME}/.oh-my-bash:/home/autoware/.oh-my-bash"
  ],
  "customizations": {
    "vscode": {
      "settings.json": {
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash"
          }
        }
      },
      "extensions": [
        "Ranch-Hand-Robotics.rde-pack",
        "cschlosser.doxdocgen",
        "llvm-vs-code-extensions.vscode-clangd",
        "ms-vscode.cpptools-extension-pack",
        "nvidia.nsight-vscode-edition",
        "twxs.cmake",
        "timonwong.shellcheck",
        "foxundermoon.shell-format",
        "ms-python.autopep8",
        "ms-python.debugpy",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "eamodio.gitlens",
        "github.vscode-pull-request-github",
        "ms-azuretools.vscode-docker",
        "ms-vscode.remote-explorer",
        "ms-vscode-remote.vscode-remote-extensionpack",
        "redhat.vscode-xml",
        "redhat.vscode-yaml",
        "streetsidesoftware.code-spell-checker",
        "yzhang.markdown-all-in-one"
      ]
    }
  }
}
